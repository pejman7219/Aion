<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"

              android:layout_width="match_parent"
              android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="start">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="8dp"
                          android:gravity="end"
                          android:layout_height="?attr/actionBarSize">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="20sp"
                          android:layout_gravity="center"
                          android:layout_marginRight="16dp"
                          android:textColor="#000000"
                          android:text="تنظیمات"/>
                <ImageView android:layout_width="32dp"
                           android:layout_height="32dp"
                           android:layout_gravity="center"
                           android:src="@drawable/ic_arrow_forward_black_24dp"
                           android:id="@+id/arrow_setting"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    <ScrollView android:layout_width="match_parent"

                android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingRight="16dp"

            android:layout_marginTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:layout_height="match_parent">
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_gravity="right"
                android:text="شما با شماره موبایل 1234567890وارد شده اید وآگهی های"
                />
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_gravity="right"
                android:text="ثبت شده  با این شماره را مشاهده می کنید."
                />
            <Button android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="24dp"
                android:paddingRight="16dp"
                android:id="@+id/btn_koroj_fragmentsetting"
                android:background="@drawable/shape_button_divarman"
                android:text="خروج از حساب"/>
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#bbbbbb"/>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:text="شیراز"
                  android:layout_marginTop="16dp"
                  android:layout_marginBottom="16dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_marginTop="16dp"
                  android:layout_marginBottom="16dp"
                  android:text="شهر من "
                  android:textSize="18sp"
                  android:textColor="#000000"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ebeaea"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
                  android:orientation="horizontal">
        <Switch android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"

                  android:text="حالت شب  "
            android:textSize="18sp"
                  android:textColor="#000000"
                  android:layout_gravity="right"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#bbbbbb"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="16dp"
            android:id="@+id/LL_settingChatVaNotification"
                      android:layout_marginBottom="16dp"
                      android:gravity="right"
                      android:orientation="horizontal">
            <ImageView android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:layout_gravity="center"
                       android:src="@drawable/ic_chevron_left_black_24dp"
                       android:id="@+id/slash_setting"/>
            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="#000000"
                      android:layout_gravity="center"
                      android:text="تنظیمات چت و نوتیفیکیشن"
                      android:id="@+id/txperson_divarman"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#bbbbbb"/>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:id="@+id/LL_hazfebazdid_fragmentsetting"
            android:orientation="horizontal">
    <TextView android:layout_width="wrap_content"
              android:text="حذف همه بازدید های اخیر"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
              android:layout_height="wrap_content"/>
        </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
        android:background="#bbbbbb"/>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:id="@+id/LL_hazfeYaddasht_fragmentsetting"
            android:orientation="horizontal">
    <TextView android:layout_width="wrap_content"
              android:text="حذف همه یادداشت ها"
            android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
              android:layout_height="wrap_content"/>
        </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#bbbbbb"/>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:id="@+id/LL_hazfeNeshanha_fragmentsetting"
            android:orientation="horizontal">
    <TextView android:layout_width="wrap_content"
              android:text="حذف همه نشان ها"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
              android:layout_height="wrap_content"/>
        </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bbbbbb"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>